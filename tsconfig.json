{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2015", // 변경
    "moduleResolution": "bundler", // 변경
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*", "mock/**/*"],
  "exclude": ["node_modules"]
}
